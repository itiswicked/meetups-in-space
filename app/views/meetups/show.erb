<h1> <%= @meetup.name %> </h1>

<% if logged_in? && @meetup.user_id == current_user.id %>
  <a class="button" href="/meetups_edit/<%= @meetup.id %>">Edit This Meetup</a>
  <a class="button" href="/meetups_delete/<%= @meetup.id %>">Cancel This Meetup</a>
<% end %>

<h3>Location</h3>
<p> <%= @meetup.location %> </p>

<h3>Creator</h3>
<p><%= @meetup.user.username %></p>

<h3>Decription</h3>
<p> <%= @meetup.description %> </p>

<h3>Who's Going</h3>
<ul id='attendees'>
  <% @meetup.users.each do |user| %>
    <li userid="<%= user.id %>">
      <img class="avatar" src="<%= user.avatar_url %>"><br />
      <p><%= user.username %></p>
    </li>
  <% end %>
</ul>

<h2>Comments</h2>
<ul id='comments'>
  <% @meetup.comments.each do |comment| %>
    <li>
      <p><%= comment.user.username %></p>
      <p><%= comment.body %></p>
      <% if users_comment?(comment.id) %>
        <a href="/comments_edit/<%= comment.id %>">Edit</a>
      <% end %>
    </li>
  <% end %>
</ul>
<% if user_joined?(@meetup) %>
   <a href="/comments_new/<%= @meetup.id %>">Leave a comment</a>
<% end %>


<% if logged_in? %>
  <a class="button" id="join-meetup" href="#" value="<%= @meetup.id %>"><%= @button_text %></a>
<% end %>
